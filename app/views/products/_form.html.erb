



<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


 <div class="col-md-6">
            <div class="form-group">
           
            <%= f.input :title, require: true, input_html: { class: "form-control" }, wrapper: false, label_html: { class: "label text-dark" } %>
            <%= f.input :description, require: true, input_html: { class: "form-control" }, wrapper: false, label_html: { class: "label text-dark" } %>
            <%= f.input :author, require: true, input_html: { class: "form-control" }, wrapper: false, label_html: { class: "label text-dark" } %>
          

      
      <br>

          <label class="file-label">
          <%= f.input :image, as: :file, required: true, input_html: { class: "form-control" }, wrapper: false, label: false  %>
          
        </label>
           <br>
           <%= f.button :submit, class: "btn btn-dark" %>

      </div>

  </div>


<% end %>